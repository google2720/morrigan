<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/ic_home_as_up_indicator</item>
        <item name="android:dividerVertical">@drawable/divider_vertical</item>
        <item name="android:dividerHorizontal">@drawable/divider_vertical</item>
        <item name="android:listDivider">@drawable/divider_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textAppearanceInverse">@style/TextAppearance.AppCompat.Inverse</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textAppearanceLargeInverse">@style/TextAppearance.AppCompat.Large.Inverse</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.AppCompat.Small.Inverse</item>
        <item name="android:textAppearanceButton">@style/TextAppearance.AppCompat.Widget.Button</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Menu</item>
    </style>

    <style name="AppTheme.Welcome">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/welcome_default_bg</item>
    </style>

    <style name="AppTheme.Login">
        <item name="colorPrimaryDark">#440067</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowBackground">@drawable/activity_main_bg</item>
    </style>

    <style name="AppTheme.History">
        <item name="colorPrimary">@color/c8c39e5</item>
        <item name="colorPrimaryDark">@color/c8c39e5</item>
    </style>

    <style name="AppTheme.Music">
        <item name="colorPrimary">@color/cA957FF</item>
        <item name="colorPrimaryDark">@color/cA957FF</item>
    </style>

    <style name="AppTheme.Guide">
        <item name="colorPrimary">#1E052B</item>
        <item name="colorPrimaryDark">#1E052B</item>
    </style>

    <style name="AppTheme.ReConnect">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Animation.ReConnect" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter_reconnect</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit_reconnect</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter_reconnect</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit_reconnect</item>
    </style>

    <style name="style0">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">#8c39e5</item>
    </style>

    <style name="style1">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#be8ef2</item>
    </style>

    <style name="style3">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="style4">
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">#7E7879</item>
    </style>

</resources>
